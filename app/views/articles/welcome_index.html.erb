 <% provide(:title, "Projeto Cuidar") %>

 <div class="page-header">
       <h1>Nossos Artigos... </h1>
  </div>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>